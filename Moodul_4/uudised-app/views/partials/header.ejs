<!doctype html>
<html lang="et">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Uudised</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">

    <a class="navbar-brand" href="/">Uudised</a>

    <div class="navbar-nav">
      <a class="nav-link" href="/">Avaleht</a>
      <a class="nav-link" href="/news/create">Lisa uudis</a>
      <% if (isAdmin) { %>
        <a class="nav-link" href="/admin">Admin panel</a>
      <% } %>
    </div>

    <div class="ms-auto d-flex align-items-center gap-2">
      <% if (!user) { %>
        <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
        <a class="btn btn-outline-light btn-sm" href="/register">Register</a>
      <% } else { %>
        <span class="text-light opacity-75 small"><%= user.username %></span>
        <form action="/logout" method="POST" class="d-inline">
          <button class="btn btn-outline-light btn-sm" type="submit">Logout</button>
        </form>
      <% } %>
    </div>

  </div>
</nav>

<div class="container py-4">
