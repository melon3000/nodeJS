<%- include('partials/header') %>

<h1 class="h3 mb-3">Muuda uudist</h1>

<% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger">
    <% errors.forEach(e => { %>
      <div><%= e.msg %></div>
    <% }) %>
  </div>
<% } %>

<form method="POST" action="/news/<%= news.id %>/edit">
  <div class="mb-3">
    <label class="form-label">Pealkiri</label>
    <input class="form-control" type="text" name="title" value="<%= values.title || '' %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Sisu</label>
    <textarea class="form-control" name="content" rows="8"><%= values.content || '' %></textarea>
  </div>

  <button class="btn btn-primary" type="submit">Salvesta</button>
  <a class="btn btn-secondary" href="/news/<%= news.id %>">Tagasi</a>
</form>

<%- include('partials/footer') %>
