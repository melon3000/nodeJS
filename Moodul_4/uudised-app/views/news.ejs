<%- include('partials/header') %>

<h1 class="h3 mb-3"><%= news.title %></h1>

<div class="mb-4" style="white-space: pre-wrap;"><%= news.content %></div>

<div class="d-flex gap-2">
  <a class="btn btn-secondary" href="/">Tagasi</a>
  <a class="btn btn-outline-primary" href="/news/<%= news.id %>/edit">Muuda</a>

  <form action="/news/delete" method="POST" onsubmit="return confirm('Kas oled kindel, et soovid selle uudise kustutada?');">
    <input type="hidden" name="id" value="<%= news.id %>">
    <button class="btn btn-danger" type="submit">Kustuta</button>
  </form>
</div>

<%- include('partials/footer') %>
